<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">


    <parameters>
        <parameter key="w3c_lifecycle_events.listener.class">W3C\LifecycleEventsBundle\EventListener\LifecycleEventsListener</parameter>
        <parameter key="w3c_lifecycle_events.property_listener.class">W3C\LifecycleEventsBundle\EventListener\LifecyclePropertyEventsListener</parameter>
        <parameter key="w3c_lifecycle_events.dispatcher.class">W3C\LifecycleEventsBundle\Services\LifecycleEventsDispatcher</parameter>
        <parameter key="w3c_lifecycle_events.post_flush_listener.class">W3C\LifecycleEventsBundle\EventListener\PostFlushListener</parameter>

        <parameter key="w3c_lifecycle_events.auto_dispatch"/>
    </parameters>

    <services>
        <service id="w3c_lifecycle_events.dispatcher" class="%w3c_lifecycle_events.dispatcher.class%">
            <argument type="service" id="event_dispatcher"/>
            <argument>%w3c_lifecycle_events.auto_dispatch%</argument>
        </service>
        <service id="w3c_lifecycle_events.listener" class="%w3c_lifecycle_events.listener.class%">
            <argument type="service" id="w3c_lifecycle_events.dispatcher"/>
            <argument type="service" id="annotation_reader"/>
            <tag name="doctrine.event_listener" event="postPersist"/>
            <tag name="doctrine.event_listener" event="postRemove"/>
            <tag name="doctrine.event_listener" event="preUpdate"/>
        </service>
        <service id="w3c_lifecycle_events.property_listener" class="%w3c_lifecycle_events.property_listener.class%">
            <argument type="service" id="w3c_lifecycle_events.dispatcher"/>
            <argument type="service" id="annotation_reader"/>
            <tag name="doctrine.event_listener" event="preUpdate"/>
        </service>
        <service id="w3c_lifecycle_events.post_flush_listener" class="%w3c_lifecycle_events.post_flush_listener.class%">
            <argument type="service" id="w3c_lifecycle_events.dispatcher"/>
            <tag name="doctrine.event_listener" event="postFlush"/>
        </service>
    </services>

</container>
